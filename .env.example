# Database (MySQL)
DATABASE_URL="mysql://root:@localhost:3306/ai_survey"

# Auth
JWT_SECRET="change-me-to-a-random-64-char-string"
SESSION_MAX_AGE_SECONDS=86400

# Admin seeding (comma-separated emails)
ADMIN_EMAILS="admin@example.com"
ADMIN_DEFAULT_PASSWORD="change-me-immediately"

# LLM Provider API Keys
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Worker concurrency (per provider)
WORKER_CONCURRENCY_OPENAI=5
WORKER_CONCURRENCY_ANTHROPIC=3

# Run limits
MAX_TOKENS_PER_RUN=1000000
MAX_COST_PER_RUN_USD=50.00

# Feature flags
ENABLE_LLM_ANALYSIS_REPASS=false
